{
    "manifest_version": 2,
    "name": "Google Meet AutoRec",
    "description": "A Google Chrome extension to enable automatic recording for Google Meet",
    "version": "1.0.0.1",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://meet.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Google Meet AutoRec"
    },
    "icons": {
        "16": "images/Google_Meet_AutoRec16.png",
        "32": "images/Google_Meet_AutoRec32.png",
        "48": "images/Google_Meet_AutoRec48.png",
        "128": "images/Google_Meet_AutoRec128.png"
    },
    "commands": {
        "start_recording": {
            "suggested_key": {
                "default": "Alt+Shift+R"
            },
            "description": "Start recording"
        },
        "stop_recording": {
            "suggested_key": {
                "default": "Alt+Shift+S"
            },
            "description": "Stop recording"
        }
    }
}